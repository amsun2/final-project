<div>
  <div>
    <h2>
      Edit genre (DELETE?)
    </h2>

    <form action="/modify_genre/<%= @the_genre.id %>"  method="post" >
      <div>
        <label for="book_id_box">
          Book
        </label>

        <input type="text" id="book_id_box" name="query_book_id" value="<%= @the_genre.book_id %>">
      </div>

      <div>
        <label for="genre_box">
          Genre
        </label>

        <input type="text" id="genre_box" name="query_genre" value="<%= @the_genre.genre %>">
      </div>

      <button>
        Update genre
      </button>
    </form>
  </div>
