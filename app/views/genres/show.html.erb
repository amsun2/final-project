<div>
  <div>
    <h1>
      <%= @the_genre.genre %> books
    </h1>

    <div>
      <div>
        <a href="/genres">
          Go back
        </a>
      </div>
    </div>

<hr>

<table border="1">
  <tr>
    <th> Title </th>
    <th> Synopsis </th> 
    <th> Publication Date </th> 
    <th> Average Rating </th> 
  <tr> 

  <% @the_genre.author_book_pair.books.each do |a_book| %>
  <tr>
    <td> <a href="/books/<%= a_book.id %>"> <%= a_book.title %> </a> </th>
