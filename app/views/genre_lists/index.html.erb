<div>
  <div>
    <h1>
      Browse by Genre
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Genre 
        </th>

        <th>
          Number of books 
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_genre_lists.each do |a_genre_list| %>
      <tr>
        <td>
          <%= a_genre_list.genre_name %>
        </td>

        <td> 
          <%= a_genre_list.genres_book_associations.length() %>
        </td> 

        <td>
          <a href="/genre_lists/<%= a_genre_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new genre
    </h2>

    <form action="/insert_genre_list" method="post">
      <div>
        <label for="genre_name_box">
          Genre name
        </label>

        <input type="text" id="genre_name_box" name="query_genre_name">
      </div>

      <button>
        Add genre
      </button>
    </form>
  </div>
</div>
