<div>
  <div>
    <h1>
      List of all books
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new book
    </h2>

    <form action="/insert_book" method="post">
      <div>
        <label for="cover_box">
          Cover
        </label>

        <input type="text" id="cover_box" name="query_cover">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="author_id_box">
          Author
        </label>

        <input type="text" id="author_id_box" name="query_author_id">
      </div>

      <div>
        <label for="synoposis_box">
          Synoposis
        </label>

        <textarea id="synoposis_box" name="query_synoposis" rows="3"></textarea>
      </div>

      <div>
        <label for="publication_date_box">
          Publication date
        </label>

        <input type="date" id="publication_date_box" name="query_publication_date">
      </div>

      <button>
        Create book
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cover
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Synoposis
        </th>

        <th>
          Publication date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_books.each do |a_book| %>
      <tr>
        <td>
          <%= a_book.id %>
        </td>

        <td>
          <%= a_book.cover %>
        </td>

        <td>
          <%= a_book.title %>
        </td>

        <td>
          <%= a_book.author_id %>
        </td>

        <td>
          <%= a_book.synoposis %>
        </td>

        <td>
          <%= a_book.publication_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_book.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= a_book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
